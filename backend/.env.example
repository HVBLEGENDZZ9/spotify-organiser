# Spotify OAuth
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://127.0.0.1:8000/auth/callback

# Gemini AI
GEMINI_API_KEY=your_gemini_api_key

# Firebase
FIREBASE_CREDENTIALS_PATH=./firebase-service-account.json
FIREBASE_PROJECT_ID=your-firebase-project-id
ENCRYPTION_KEY=your-fernet-encryption-key-generate-with-cryptography


# Subscription (Free tier)
SUBSCRIPTION_DURATION_DAYS=365

# AWS SES Email
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
SES_FROM_EMAIL=noreply@yourdomain.com
SES_FROM_NAME=Spotify Organizer

# App Settings
SECRET_KEY=change-this-to-a-secure-random-string
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://127.0.0.1:8000

# Processing
MAX_LIKED_SONGS=1000
BATCH_SIZE=50

# Spotify API Rate Limiting
# Conservative limits to stay within Spotify's rolling 30-second window
# Adjust these based on your Spotify quota mode (development vs extended)
SPOTIFY_READ_LIMIT=80
SPOTIFY_WRITE_LIMIT=30
SPOTIFY_BATCH_LIMIT=20

# User Processing Concurrency
# Controls how many users can be processed simultaneously
MAX_CONCURRENT_USERS=5
INTER_USER_DELAY=5.0

# Job Queue Settings
# For 1000 users with 30s stagger = ~8 hours to process all
SCAN_STAGGER_SECONDS=30
JOB_MAX_RETRIES=3
JOB_STAGGER_DELAY=30

# Scheduler
SCAN_HOUR_UTC=2
EXPIRY_CHECK_HOUR_UTC=10

